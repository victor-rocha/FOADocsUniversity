<br>
<%= form_for @curso,  html: {class: "form-horizontal", role: "form"} do |f| %>
  <% if @curso.errors.any? %>
    <div id="error_explanation">
      <ul class="non-bolinha">
      <% @curso.errors.full_messages.each do |msg| %>
        <li><span class="label label-danger"><%= msg %></span></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="well clearfix">
  <div class="form-group">
    <%= f.label :nome, :class => "col-sm-2 control-label" %>
     <div class="col-sm-10">
      <%= f.text_field :nome, :placeholder => "Nome", :class => "form-control" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'Salvar', class: "btn btn-success pull-right" %>
  </div>
<% end %>
</div>
